{% extends "AppBundle::layout.html.twig" %}

{% block title %}
  Home - {{ parent() }}
{% endblock %}

{% block appbundle_body %}

  <h2>Jobs list</h2>

  <ul>
    {% for job in listJobs %}
      <li>
        <a href="{{ path('job_view', {'id': job.id}) }}">
          {{ job.title }}
        </a>
        by {{ job.author }},
        the {{ job.createdAt|date('m/d/Y') }}
      </li>
    {% else %}
      <li>No jobs</li>
    {% endfor %}
  </ul>

  <ul class="pagination">

    {% for p in range(1, nbPages) %}
      <li{% if p == page %} class="active"{% endif %}>
        <a href="{{ path('index_home', {'page': p}) }}">{{ p }}</a>
      </li>
    {% endfor %}

  </ul>

{% endblock %}
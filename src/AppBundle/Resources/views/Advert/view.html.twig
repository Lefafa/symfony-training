{% extends "AppBundle::layout.html.twig" %}

{% block title %}
  View an advert - {{ parent() }}
{% endblock %}

{% block appbundle_body %}

  <h2>{{ advert.title }}</h2>
  <i>By {{ advert.author }}, the {{ advert.date|date('m/d/Y') }}</i>

  <div class="well">
    {{ advert.content }}
  </div>

  <p>
    <a href="{{ path('index_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Back to the list
    </a>
    <a href="{{ path('advert_edit', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Edit advert
    </a>
    <a href="{{ path('advert_delete', {'id': advert.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Delete advert
    </a>
  </p>

{% endblock %}